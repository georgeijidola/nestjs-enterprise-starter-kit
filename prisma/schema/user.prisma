enum UserRole {
  USER
  ADMIN
}

model User {
  id              String   @id @default(cuid())
  name            String
  email           String   @unique
  password        String
  isEmailVerified Boolean  @default(false) @db.Boolean
  role            UserRole @default(USER)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  apiKeys   ApiKey[]
  auditLogs AuditLog[]

  @@map("users")
}
